<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
            <span><%=blog.created.toDateString()%></span>
              <hr class="styleone">
            </div>
            <div class="description">
                <p><%=blog.body%></p>
            </div>
               <br>
               <form class="getinline" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE" >
                   <button class="ui red inverted button">Delete</button>
               </form>
               <form class="getinline" method="GET" action="/blogs/<%=blog._id%>/edit" >
                   <button class="ui yellow inverted button">Edit</button>
               </form>
        </div>
    </div>
    
</div>

